<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hamburgers/1.2.1/hamburgers.min.css" integrity="sha512-+mlclc5Q/eHs49oIOCxnnENudJWuNqX5AogCiqRBgKnpoplPzETg2fkgBFVC6WYUVxYYljuxPNG8RE7yBy1K+g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Staatliches&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400..800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/MaterialesNexus/archivos/css/trix.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
    <link rel="stylesheet" href="https://unpkg.com/esri-leaflet-geocoder@3.1.4/dist/esri-leaflet-geocoder.css" crossorigin="" />
    <link rel="stylesheet" href="/MaterialesNexus/archivos/css/app.css">
    
    <title>Nexus - <%- nombrePagina %></title>
</head>
<body>
    <header class="site-header contenedor">
        <a href="/">
            <img src="/MaterialesNexus/archivos/img/logo4definitivo.png" width="300px" alt="">
        </a>
        <nav class="nav">
            <% if (locals.usuario && locals.usuario.id) { %>
                <%- include('partials/nav-auth.ejs') %>
            <% } else { %>
                <%- include('partials/nav-no-auth.ejs') %>
            <% } %>
        </nav>
    </header>

    <% if (locals.mensajes && typeof locals.mensajes === 'object') { %>
        <% const categorias = Object.keys(locals.mensajes); %>
        <% categorias.forEach(categoria => { %>
            <% if (locals.mensajes[categoria].length) { %>
                <% locals.mensajes[categoria].forEach(alerta => { %>
                    <div class="alertas">
                        <p class="alerta <%= categoria %> btn-cool"><%= alerta %></p>
                    </div>
                <% }) %>
            <% } %>
        <% }) %>
    <% } %>
    
    <%- body %>

    <footer class="site-footer contenedor">
        <div class="contacto">
            <img src="/MaterialesNexus/archivos/img/instagram.png" alt="">
            <img src="/MaterialesNexus/archivos/img/Wasap.png" alt="">
        </div>
       
        <p class="copyright">Todos los derechos reservados Nexus 2024 &copy;</p>
    </footer>
    <script src="/MaterialesNexus/archivos/js/trix.js"></script>
    <script src="/MaterialesNexus/archivos/js/module.js" type="module"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/esri-leaflet@3.0.12/dist/esri-leaflet.js"></script>
    <script src="https://unpkg.com/esri-leaflet-geocoder@3.1.4/dist/esri-leaflet-geocoder.js" crossorigin=""></script>
    <script src="/dist/bundle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="/MaterialesNexus/archivos/js/course.js" ></script>
</body>
</html>
