<main class="contenedor contenedor-formularios no-padding">
    <h1> <%= nombrePagina %></h1>

    <form class="default-form"  method="POST">
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="nombre" placeholder="Titulo Noticia" value="<%= neww.nombre %>">
        </div>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= neww.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <Label>Categoria</Label>
            <select name="categoriaId" >
                <option value="" selected disabled>--Elige una categoria</option>
                <% categoria.forEach(categoria=>{ %>
                    <option 
                    value="<%= categoria.id %>"
                    <%= (neww.categoriaId === categoria.id) ? 'selected' : '' %>
                    ><%= categoria.nombre %></option>
                    <% }) %>
            </select>
        </div>
        <div class="campo"></div>
            <label>Sitio Web</label>
            <input type="url" name="url" placeholder="Sitio Web" value="<%= neww.url %>">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
        </div>
        


    </form>
</main>